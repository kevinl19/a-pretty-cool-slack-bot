{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 16",

  "compilerOptions": {
    "lib": ["es2021"],
    "module": "commonjs",
    "baseUrl": ".",
    "moduleResolution": "node",
    "target": "es2021",
    "outDir": "lib",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "paths": {
      "*": [
        "node_modules/*"
      ]
    },
//    "include": [
//      "src/**/*.js",
//      "src/**/*.ts",
//    ]
  }
}
